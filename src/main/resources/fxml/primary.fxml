<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="rootPane" stylesheets="@../styles/Styles.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.equiporon.Controlador.Controlador">

    <!-- ===================== MENÃš SUPERIOR ===================== -->
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu fx:id="menuFile" text="%menu.file">
                        <items>
                            <MenuItem fx:id="menuItemClose" onAction="#clickOnFile" text="%menuitem.close" />
                        </items>
                    </Menu>
                    <Menu fx:id="menuHelp" text="%menu.help">
                        <items>
                            <MenuItem fx:id="menuItemHelp" onAction="#clickOnHelp" text="%menuitem.help" />
                            <MenuItem fx:id="menuItemAbout" onAction="#clickOnAbout" text="%menuitem.about" />
                        </items>
                    </Menu>
                    <Menu fx:id="menuLanguage" text="%menu.language">
                        <items>
                            <MenuItem fx:id="menuEspanol" onAction="#cambiarIdioma" text="%menuitem.espanol" />
                            <MenuItem fx:id="menuIngles" onAction="#cambiarIdioma" text="%menuitem.english" />
                            <MenuItem fx:id="menuParsel" onAction="#cambiarIdioma" text="%menuitem.parsel" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <!-- Banner + selector -->
            <HBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>

                <ImageView fx:id="bannerIzquierdo" fitHeight="70" preserveRatio="true">
                    <image>
                        <Image url="@../images/hogwarts_banner.png" />
                    </image>
                </ImageView>

                <ComboBox fx:id="choiceCasas" prefWidth="200">
                    <tooltip>
                        <Tooltip text="%tooltip.comboCasas" />
                    </tooltip>
                </ComboBox>

                <ImageView fx:id="escudoCasa" fitHeight="70" preserveRatio="true">
                    <image>
                        <Image url="@../images/hogwarts_escudo.png" />
                    </image>
                </ImageView>

                <ImageView fx:id="bannerDerecho" fitHeight="70" preserveRatio="true">
                    <image>
                        <Image url="@../images/hogwarts_banner.png" />
                    </image>
                </ImageView>
            </HBox>
        </VBox>

        <!-- ===================== CONTENIDO CENTRAL ===================== -->
        <VBox spacing="20"
              AnchorPane.topAnchor="130"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <HBox spacing="40" alignment="CENTER">
                <!-- Formulario -->
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35" />
                        <ColumnConstraints percentWidth="65" />
                    </columnConstraints>
                    <children>
                        <Label fx:id="lblNombre" text="%label.nombre" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label fx:id="lblApellidos" text="%label.apellidos" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtApellidos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label fx:id="lblCurso" text="%label.curso" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtCurso" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label fx:id="lblPatronus" text="%label.patronus" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtPatronus" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label fx:id="lblCasa" text="%label.casa" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtCasa" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>

                <!-- Botones -->
                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="botAdd" text="%button.add" onAction="#clickOnAdd" maxWidth="200"/>
                    <Button fx:id="botBorrar" text="%button.delete" onAction="#clickOnBorrar" maxWidth="200"/>
                    <Button fx:id="botDeshacer" text="%button.undo" onAction="#clickOnUndo" maxWidth="200"/>
                </VBox>
            </HBox>

            <!-- Tabla -->
            <TableView fx:id="tablaEstudiantes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="tableId" text="%label.id" prefWidth="75"/>
                    <TableColumn fx:id="tableNombre" text="%label.nombre" prefWidth="75"/>
                    <TableColumn fx:id="tableApellidos" text="%label.apellidos" prefWidth="75"/>
                    <TableColumn fx:id="tableCasa" text="%label.casa" prefWidth="75"/>
                    <TableColumn fx:id="tableCurso" text="%label.curso" prefWidth="75"/>
                    <TableColumn fx:id="tablePatronus" text="%label.patronus" prefWidth="75"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
