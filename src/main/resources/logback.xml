<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- === Consola === -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === Archivo general === -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/hogwarts.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- crea un nuevo archivo de log cada día -->
            <fileNamePattern>logs/hogwarts-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory> <!-- guarda 7 días -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- === Nivel general del proyecto === -->
    <logger name="org.equiporon" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_ALL"/>
    </logger>

    <!-- === Root logger (para todo lo demás) === -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
